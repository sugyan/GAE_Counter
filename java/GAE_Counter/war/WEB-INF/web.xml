<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
	<filter>
		<filter-name>JspFilter</filter-name>
		<filter-class>org.sugyan.counter.filter.JspFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>JspFilter</filter-name>
		<url-pattern>/view/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>Index</servlet-name>
		<servlet-class>org.sugyan.counter.view.IndexServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Home</servlet-name>
		<servlet-class>org.sugyan.counter.view.HomeServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Config</servlet-name>
		<servlet-class>org.sugyan.counter.view.ConfigServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Record</servlet-name>
		<servlet-class>org.sugyan.counter.view.RecordServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Create</servlet-name>
		<servlet-class>org.sugyan.counter.CreateServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Delete</servlet-name>
		<servlet-class>org.sugyan.counter.DeleteServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Counter</servlet-name>
		<servlet-class>org.sugyan.counter.CounterServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AdminDeleteCounter</servlet-name>
		<servlet-class>org.sugyan.counter.admin.DeleteCounterServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AdminDeleteRecord</servlet-name>
		<servlet-class>org.sugyan.counter.admin.DeleteRecordServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AdminCreate</servlet-name>
		<servlet-class>org.sugyan.counter.admin.CreateServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AdminUpload</servlet-name>
		<servlet-class>org.sugyan.counter.admin.UploadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Index</servlet-name>
		<url-pattern>/main</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Home</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Config</servlet-name>
		<url-pattern>/config/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Record</servlet-name>
		<url-pattern>/record/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Create</servlet-name>
		<url-pattern>/create</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Delete</servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Counter</servlet-name>
		<url-pattern>/counter/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AdminDeleteCounter</servlet-name>
		<url-pattern>/admin/cron/delete/counter</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AdminDeleteRecord</servlet-name>
		<url-pattern>/admin/cron/delete/record</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AdminCreate</servlet-name>
		<url-pattern>/admin/create</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AdminUpload</servlet-name>
		<url-pattern>/admin/upload</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Google Accounts</web-resource-name>
			<url-pattern>/home</url-pattern>
			<url-pattern>/config/*</url-pattern>
			<url-pattern>/record/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>*</role-name></auth-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Administrator</web-resource-name>
			<url-pattern>/admin/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>

</web-app>
