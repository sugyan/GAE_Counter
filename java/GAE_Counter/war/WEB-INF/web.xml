<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
	<servlet>
		<servlet-name>MainPage</servlet-name>
		<servlet-class>org.sugyan.counter.MainPageServlet</servlet-class>
	</servlet><servlet>
		<servlet-name>Create</servlet-name>
		<servlet-class>org.sugyan.counter.CreateServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Destroy</servlet-name>
		<servlet-class>org.sugyan.counter.DestroyServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Config</servlet-name>
		<servlet-class>org.sugyan.counter.ConfigServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Counter</servlet-name>
		<servlet-class>org.sugyan.counter.CounterServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>MainPage</servlet-name>
		<url-pattern>/main</url-pattern>
	</servlet-mapping><servlet-mapping>
		<servlet-name>Create</servlet-name>
		<url-pattern>/create</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Destroy</servlet-name>
		<url-pattern>/destroy</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Config</servlet-name>
		<url-pattern>/config</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Counter</servlet-name>
		<url-pattern>/counter/*</url-pattern>
	</servlet-mapping>

</web-app>
